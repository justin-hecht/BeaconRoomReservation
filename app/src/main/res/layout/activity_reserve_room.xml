<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:weightSum="10"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/start_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/startTime"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="12:00"
            android:textAlignment="center"
            android:textColor="@color/blue_300"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">

    <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/end_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/endTime"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="12:00"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue_300" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/date"
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/dateLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.8.2017"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/dateLabel"
        android:textColor="@color/blue_300" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Title"
        android:layout_below="@+id/date"
        android:id="@+id/titleLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:inputType="text"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:hint="@string/new_mitting"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/titleLabel"
        android:textColor="@color/blue_300" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="People"
        android:layout_below="@+id/title"
        android:id="@+id/userLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/users"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:hint="Add users..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="start"
        android:layout_below="@+id/userLabel"
        android:layout_above="@+id/reserveButtin"
        android:textColor="@color/blue_300" />


    <Button
        android:id="@+id/reserveButtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_grey_400"
        android:fontFamily="sans-serif-condensed"
        android:text="RESERVE"
        android:textColor="@color/white"
        android:typeface="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>